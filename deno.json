{
  "imports": {
    "oak/": "https://deno.land/x/oak/"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env main.ts",
    "dev": "deno run --watch --allow-net --allow-env main.ts"
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "useTabs": false,
    "indentWidth": 2,
    "include": ["src/"]
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
